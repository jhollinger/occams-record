#!/usr/bin/env bash

if [[ $# -lt 3 ]]; then
  echo "Use: bin/rake ruby-X ar-X [args]"
  exit 1
fi

set -euo pipefail

cd $(dirname $0)/../

ruby_version=$1
ar_version=$2
shift 2

exec env bin/run ${ruby_version} bash -c '
  BVER=$(tail -n 1 Gemfile.lock | sed "s/ //g")
  if ! gem list bundler --exact | grep $BVER > /dev/null; then
    gem install bundler -v $BVER
  fi
  bundle install && \
    bundle exec appraisal '${ar_version}' bundle install && \
    TEST_DATABASE_URL="'${TEST_DATABASE_URL-}'" bundle exec appraisal '${ar_version}' rake '"${@}"
